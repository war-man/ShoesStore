@model IEnumerable<CoV.Service.DataModel.OrderDetailsViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <h1 style="text-align: center" ><a  asp-controller="Product" asp-action="GetAll">Hoàn hàng</a></h1>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 table-responsive">
        <table  id="ShowClass" class="table table-bordered table-hover">
            <thead class="thead-light">       
            <tr style="background-color: darkgrey">
                <td >Shipper</td>
                <td >Tên khách hàng </td>
                <td >Số điện thoại </td>
                <td >Tên sản phẩm </td>
                <td >Số lượng</td>
                <td > Tổng tiền </td>
                <td >Địa chỉ</td>
                <td >Ngày đặt</td>
                <td >Trạng thái</td>
                <td >Xuất vào kho</td>
            </tr>
                
            <tbody>
            @foreach(var item in Model)
            { 
                <tr style="text-align: center" > 
                    <td >@item.Shipper</td> 
                    <td >@item.NameCustomer</td> 
                    <td >@item.PhoneNumber</td> 
                    <td >@item.NameProduct</td> 
                    <td >@item.NumberProduct SP</td> 
                    <td >@item.TotalMoney</td> 
                    <td >@item.Address</td> 
                    <td >@item.CreateDate</td> 
                    <td style="color: blue" ><button  class=" btn btn-primary ">@item.StatusOrder.Status </button> </td> 
                    <td style="color: blue" ><button  id="@item.Id" class="btn btn-primary status"> <i class="fas fa-ambulance"></i></button> </td> 
                </tr> 
            } 
            </tbody>
            </thead>
        </table>
    </div>
</div>


@section Scripts{
    <script>    
        $(document).ready(function() {
            $(".status").on('click',
                function(e) {
                    e.preventDefault();
                    //id order
                    var id = $(this).attr("id");
                    $.ajax({
                        url: '@Url.Action("Delete", "OrderDetals")',
                        type: "GET",
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        data: { 'id': id},
                        async: true,
                        cache: false,
                        success: function() {
                            $(this).hide();
                        }
                    });
                });
            $('#ShowClass').DataTable();

        });
    </script>

}

