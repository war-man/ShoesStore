@model CoV.Service.DataModel.StudentViewModel

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-sm-5">
        <form role="form"  enctype="multipart/form-data" asp-controller="Student" asp-action="CreateOrUpdate" method="post">
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Student Code </label>
                    <input class="form-control" id="exampleInputEmail1" placeholder="Student code " required asp-for="StudentMasv">
                    <div>
                        <span asp-validation-for="StudentName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Name Student : </label>
                    <input  class="form-control" id="exampleInputPassword1" placeholder="StudentName" required asp-for="StudentName">
                    <div>
                        <span asp-validation-for="StudentName" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="exampleInputPassword1">Age :</label>
                    <input class="form-control" id="exampleInputPassword1" placeholder="StudentAge" required asp-for="StudentAge">
                    <div>
                        <span asp-validation-for="StudentAge" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="exampleInputPassword1">Address :</label>
                    <input class="form-control" id="exampleInputPassword1" placeholder="StudentAddress" required asp-for="StudentAddress">
                    <div>
                        <span asp-validation-for="StudentAddress" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="exampleInputPassword1">Class Name :</label>
                    <select class="custom-select" asp-for="ClasserId">

                        @foreach (var item in Model.ClasserModels)
                        {
                            <option value="@item.Id">@item.ClassName</option>
                        }
                    </select>
                    <div>
                        <span asp-validation-for="ClasserId" class="text-danger"></span>
                    </div>
                </div>
                
                
            
                <div class="form-group">
                        <label> Avatar Student :</label>
                        <div class="input-group ">
                            <div class="custom-file">
                                <input id="imgInp" type="file" class="custom-file-input" id="validatedCustomFile" class="rounded-pill" asp-for="PhotoPath">
                                <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                                <div class="invalid-feedback">Example invalid custom file feedback</div>
                            </div>
                        </div>
                 </div>
              
                <div >
                    <input required asp-for="StudentAvatar">
                    <img style="margin-left: auto; margin-right: auto;" id="blah" class="rounded-pill"src="~/Images/@Model.StudentAvatar"/>
                </div>
            <!-- /.card-body -->

            <div class="card-footer" style="text-align: center"> 
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            </div>
        </form>
    </div>
    <div class="col-sm-7">
        
    </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
@section Scripts
{
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function(e) {
                    $('#blah').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        };
        $("#imgInp").change(function() {
            readURL(this);
        });
    </script>
}