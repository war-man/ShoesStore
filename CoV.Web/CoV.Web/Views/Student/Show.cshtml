    @model IEnumerable<CoV.Service.DataModel.StudentViewModel>
    
    @{
        ViewBag.Title = "title";
        Layout = "_AdminLayout";
    }
    
      <div class="row">
          <div class="col-sm-12">
              <a class="btn btn-primary " asp-controller="Student" asp-action="CreateOrUpdate">Create Student</a>
          </div>
        </div>
        <div class="row">
            <div class="col-sm-12 table-responsive">
                <table  id="ShowStudent" class="table table-bordered table-hover">
                    <thead class="thead-light">       
                    <tr style="background-color: darkgrey">
                        <td>StudentMasv</td>
                        <td>StudentName</td>
                        <td>Student Image</td>
                        <td>StudentAge</td>
                        <td>StudentAddress</td>
                    <td>Classer</td> 
                    <td style="text-align: center">Update - Delete</td>
                </tr>
                </thead> 
                <tbody> 
                @foreach(var item in Model)
                { 
                    <tr style="text-align: center"> 
                        <td >@item.StudentMasv</td> 
                        <td>@item.StudentName</td> 
                        <td style="width: 120px; height: 100px"  > <img src="~/Images/@item.StudentAvatar" width="100%" height="100%"/></td> 
                        <td>@item.StudentAge</td> 
                        <td>@item.StudentAddress</td> 
                        <td>@item.Classes.ClassName</td> 
              
                        <td style="text-align: center"> 
                            <a class="btn btn-primary "  asp-controller="Student"  asp-action="CreateOrUpdate"  asp-route-id="@item.Id"  > <i  class="fas fa-edit"></i></a> 
                            <a class="btn btn-primary "  asp-controller="Student"  asp-action="Delete" asp-route-id="@item.Id"  ><i style="color: red" class="fas fa-trash-alt"></i></a> 
                        </td> 
                    </tr> 
                } 
                </tbody>
               

            </table>
        </div>

    </div>


@section Scripts{

    <script>
        $(document).ready(function() {
            $('#ShowStudent').DataTable();
        });
    </script>
}



