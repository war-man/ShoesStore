@using CoV.Service.DataModel
@model CoV.Service.DataModel.ProductDetailsViewModel

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
    var color = (List<ColorProductViewModel>)ViewBag.color;
    var status = (List<StatusProductViewModel>)ViewBag.status;
    var name =(string)ViewBag.name;
    var sku =(string)ViewBag.sku;
    var id =(int)ViewBag.id;
}

<div class="row">
    <div class="col-12">
        <h2 style="text-align: center"  ><a  asp-controller="ProductDetails" asp-action="GetAll">Cập nhật danh sách sản phẩm chi tiết</a></h2>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <form enctype="multipart/form-data"  asp-controller="ProductDetails" asp-action="Add" method="post">
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label >Tên sản phẩm </label>
                            <input class="form-control" placeholder="..."  value="@name" disabled >
                            <input class="form-control" placeholder="..."  value="@id" asp-for="ProductId" hidden  >
                        </div>

                        <div class="form-group">
                            <label >Mã sản phẩm</label>
                            <input class="form-control" placeholder="..." value="@sku" disabled>
                        </div>

                        <div class="form-group">
                            <label >Số lượng </label>
                            <input class="form-control" placeholder="..." value="1" min="0" asp-for="NumberProduct" min="1" type='number' step="1" onkeyup=" this.value = this.value.replace(/[^0-9]/g, '')">
                        </div>
                        
                        <div class="form-group">
                            <label >Trạng thái</label>
                            <select class="custom-select" asp-for="StatusProductId">
                                @foreach (var item in status)
                                {
                                    <option value="@item.Id">@item.Status</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label >Hãng sản phẩm</label>
                            <select class="custom-select" asp-for="SizeProduct">
                                <option>34</option>
                                <option>35</option>
                                <option>36</option>
                                <option>37</option>
                                <option>38</option>
                                <option>39</option>
                                <option>40</option>
                                <option>41</option>
                                <option>42</option>
                                <option>43</option>
                                <option>44</option>
                                <option>45</option>
                            </select>
                        </div>

                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label>Hình ảnh Sản phẩm</label>
                            <div class="input-group ">
                                <div class="custom-file">
                                    <input id="imgInp" type="file" class="custom-file-input" id="validatedCustomFile" class="rounded-pill" asp-for="PhotoPath" >
                                    <label class="custom-file-label" for="validatedCustomFile">Chọn ảnh...</label>
                                    <div class="invalid-feedback">Example invalid custom file feedback</div>
                                </div>
                            </div>
                        </div>
                        <div style="width: 350px; height: 350px; text-align: center;" >
                            <input class="custom-file-input" asp-for="AvatarDetails" >
                            <img id="blah" src="~/Images/img-detail-02.jpg" alt="Responsive image" class="rounded-pill"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div style="text-align: center">
                            <div asp-validation-summary="ModelOnly" class="text-danger"  style="text-align: center"></div>	
                            <button type="submit" class="btn btn-primary">Tạo sản phẩm </button>
                        </div>
                    </div>
                    <div class="col-6"></div>
                </div>
            </div>
        </form>
    </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

@section Scripts
{
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#blah').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        };

        $("#imgInp").change(function() {
            readURL(this);
        });
    </script>
}