@model IEnumerable<CoV.Service.DataModel.OrderDetailsViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

 <div class="row">
        <div class="col-12">
            <h1 style="text-align: center" ><a  asp-controller="Product" asp-action="GetAll">Đơn hàng đang giao </a></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 table-responsive">
            <table  id="ShowClass" class="table table-bordered table-hover">
                <thead class="thead-light">       
                <tr style="background-color: darkgrey">
                    <td >Shipper</td>
                    <td >Tên khách hàng </td>
                    <td >Số điện thoại </td>
                    <td >Tên sản phẩm </td>
                    <td >Số lượng</td>
                    <td > Tổng tiền </td>
                    <td >Địa chỉ</td>
                    <td >Ngày đặt</td>
                    <td >Giao thành công</td>
                    <td style="text-align: center">Hoàn hàng</td>
                    <td style="text-align: center">Cập nhật</td>
                </tr>
                
                <tbody>
                @foreach(var item in Model)
                { 
                    <tr style="text-align: center" > 
                        <td >@item.Shipper</td> 
                        <td >@item.NameCustomer</td> 
                        <td >@item.PhoneNumber</td> 
                        <td >@item.NameProduct</td> 
                        <td >@item.NumberProduct SP</td> 
                        <td >@item.TotalMoney</td> 
                        <td >@item.Address</td> 
                        <td >@item.CreateDate</td> 
                        <td style="color: blue" ><button id="@item.Id" class=" btn btn-primary status">@item.StatusOrder.Status </button> </td> 
                        <td ><a asp-action="Comback" asp-controller="OrderDetals" asp-route-id="@item.Id" ><button style="background-color: red"  class=" btn comback">Hoàn hàng</button></a> </td> 
                        <td style="text-align: center"> 
                            <a class="btn btn-primary "  asp-route-id="@item.Id"  >Chi tiết </a> 
                        </td> 
                    </tr> 
                } 
                </tbody>
                </thead>
            </table>
        </div>
    </div>


@section Scripts{
    <script>    
        $(document).ready(function() {
          
            $(".status").on('click',
                function(e) {
                    e.preventDefault();
                    //id order
                    var id = e.target.id;

                    $.ajax({
                        url: '@Url.Action("ShipPerfect", "OrderDetals")',
                        type: "GET",
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        data: { 'id': id},
                        async: true,
                        cache: false,
                        success: function() {
                            $('#' + id).text("Giao thành công");
                            $('#' + id).css("background-color","red");
                        }
                    });
                });
