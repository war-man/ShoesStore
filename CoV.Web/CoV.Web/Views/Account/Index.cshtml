@model IEnumerable<CoV.Service.DataModel.UserViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}
    <div class="row">
        <div class="col-12" style="text-align: center">
          <b> <h1> <a  asp-controller="Account" asp-action="Index">DANH SÁCH TÀI KHOẢN QUẢN TRỊ</a></h1></b>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 table-responsive">
            <table  id="ShowClass" class="table table-bordered table-hover">
                <thead class="thead-light">       
                <tr style="background-color: darkgrey"> 
                    <td >Tên tài khoản</td>
                    <td>Ảnh đại diên</td>
                    <td >Quyền</td>
                    <td >Ngày khởi tạo</td>
                    <td >Hạn sử dụng</td>
                    <td>Yêu cầu</td>
                    <td style="text-align: center">Cập nhật</td>
                    <td style="text-align: center">Xóa </td>
                </tr>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>  
                        <td>@item.UserName</td>
                        <td style="width: 120px; height: 50px"  > <img src="~/Images/@item.ImageAvatar" width="100%" height="100%"/></td> 
                        <td>@item.Role.RoleName</td>
                        <td>@item.FirstDate</td>
                        <td>@item.ExpiredDate</td>
                        <td>@item.Request</td>
                        <td style="text-align: center">
                            <a  asp-route-id="@item.Id" asp-controller="Account" asp-action="CreateOrUpdate"   > <i  class="fas fa-edit"></i></a>
                        </td>
                        <td style="text-align: center">
                            <a  asp-route-id="@item.Id" asp-action="Delete" asp-controller="Account"> <i style="color: red" class="fas fa-user-times"></i></a>
                        </td>
                    </tr>
                }
                </tbody>
                </thead>
            </table>
        </div>
    </div>


@section Scripts{
    <script>
        $(document).ready(function() {
            $('#ShowClass').DataTable();
        });
    </script>
}







